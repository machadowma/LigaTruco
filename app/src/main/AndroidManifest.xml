<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.machadowma.ligatruco">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".JogadorActivity"
            android:label="@string/title_activity_jogador"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EquipeActivity"
            android:label="@string/title_activity_equipe"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PartidaActivity"
            android:label="@string/title_activity_partida"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".JogadorAddActivity" />
        <activity android:name=".EquipeAddActivity" />
        <activity
            android:name=".EquipeEditActivity"
            android:label="@string/title_activity_equipe_edit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".EquipeAddIntegrActivity" />
        <activity android:name=".PartidaAddActivity"></activity>
    </application>

</manifest>